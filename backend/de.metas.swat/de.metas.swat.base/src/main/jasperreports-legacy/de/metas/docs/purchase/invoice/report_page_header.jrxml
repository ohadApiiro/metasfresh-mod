	<parameter name="ad_language" isForPrompting="true" class="java.lang.String"/>
	<queryString><![CDATA[SELECT *
FROM (
	SELECT 
		c_invoice.c_invoice_id,
		'de_DE' 		as ad_language,
		c_invoice.description 	as description,
		c_invoice.documentno 	as documentno,
		c_invoice.dateinvoiced	as dateinvoiced,
		dt.printname		as dt_documenttype

	FROM
		c_invoice c_invoice
	   LEFT JOIN c_doctype dt ON c_invoice.c_doctype_id = dt.c_doctype_id
UNION
	SELECT
		c_invoice.c_invoice_id,
		dt.ad_language 		as ad_language,
		c_invoice.description 	as description,
		c_invoice.documentno 	as documentno,
		c_invoice.dateinvoiced	as dateinvoiced,
		dt.printname		as dt_documenttype

	FROM
		c_invoice c_invoice
	   LEFT JOIN c_doctype_trl dt ON c_invoice.c_doctype_id = dt.c_doctype_id
	
)invoice
WHERE
	invoice.c_invoice_id = $P{RECORD_ID}
	AND invoice.ad_language = $P{ad_language}
;]]></queryString>

