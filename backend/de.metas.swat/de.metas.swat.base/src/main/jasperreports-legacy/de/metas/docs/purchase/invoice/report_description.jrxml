	<queryString><![CDATA[SELECT *
FROM (
	SELECT 
		'de_DE'		as ad_language,
		c_invoice_id	as c_invoice_id,
		dt.printname	as printname,
		i.description 	as description,
		i.documentno 	as documentno,
		i.dateinvoiced	as dateinvoiced,
		bp.value	as bp_value

	FROM
		c_invoice i
	   LEFT JOIN c_doctype dt  	ON i.c_doctype_id	= dt.c_doctype_id
		JOIN c_bpartner bp 	ON i.c_bpartner_id	= bp.c_bpartner_id
UNION
	SELECT 
		dt.ad_language	as ad_language,
		c_invoice_id	as c_invoice_id,
		dt.printname	as printname,
		i.description 	as description,
		i.documentno 	as documentno,
		i.dateinvoiced	as dateinvoiced,
		bp.value	as bp_value

	FROM
		c_invoice i
	   LEFT JOIN c_doctype_trl dt  	ON i.c_doctype_id	= dt.c_doctype_id
		JOIN c_bpartner bp 	ON i.c_bpartner_id	= bp.c_bpartner_id
)description

WHERE
description.c_invoice_id = $P{RECORD_ID}
AND description.ad_language = $P{ad_language}
;]]></queryString>

